{
  "name": "swatantar-portfolio",
  "version": "1.0.0",
  "private": true,
  "description": "Microbial Biogeochemist Portfolio - Dr. Swatantar Kumar",
  "keywords": [
    "portfolio",
    "microbial-biogeochemistry",
    "microbial-ecology",
    "nitrogen-cycle",
    "groundwater-microbiology",
    "biogeochemistry",
    "environmental-microbiology",
    "research",
    "react",
    "nextjs"
  ],
  "author": {
    "name": "Dr. Swatantar Kumar",
    "email": "kumar.swatantar2020@gmail.com",
    "url": "https://github.com/MrRajat1809"
  },
  "homepage": "https://mrrajat1809.github.io/swatantar_portfolio",
  "repository": {
    "type": "git",
    "url": "https://github.com/MrRajat1809/swatantar_portfolio.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "export": "next export",
    "deploy": "npm run build && npm run export",
    "analyze": "cross-env ANALYZE=true npm run build",
    "type-check": "echo 'Type checking skipped - JavaScript project'",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "dependencies": {
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.294.0",
    "next": "14.0.4",
    "react": "^18.3.1",
    "react-dom": "^18.2.0",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.0.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.17"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "react-hooks/exhaustive-deps": "warn"
    },
    "env": {
      "browser": true,
      "es2020": true,
      "node": true
    }
  }
}
